@using E = ExoContacts.Domain.Entities
@model IEnumerable<E.Contact>
@{
    ViewData["Title"] = "ContactList";
}

<h2>Mes contacts : </h2>

<a class="btn btn-primary" asp-controller="Contact" asp-action="Create">Ajouter un contact</a>
<table class="table">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Surnom</th>
            <th>Tel</th>
            <th>Email</th>
            <th>Date de naissance</th>
            <th>Type Contact</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach(E.Contact c in Model)
        {
            <tr>
                <td>@c.LastName</td>
                <td>@c.FirstName</td>
                <td>@(c.NickName == null ? "Pas de surnom 😭" : c.NickName)</td>
                <td>@c.Phone</td>
                <td>@c.Mail</td>
                <td>@(c.BirthDate == null ? "Inconnue" : c.BirthDate.ToString())</td>
                <td>@c.ContactType</td>
                <td>
                    <a class="btn btn-secondary" asp-controller="Contact" asp-action="Update" asp-route-id="@c.Id">✏ Modifier</a>
                    <a class="btn btn-danger" asp-controller="Contact" asp-action="Delete" asp-route-id="@c.Id">🗑 Supprimer</a>
                </td>
            </tr>
        }
    </tbody>

</table>